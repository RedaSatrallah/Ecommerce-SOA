{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <section class="container mx-auto py-10 px-6">
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Edit Product</h1>
        </div>

        <form action="{{ path('product_edit', { id: product.id }) }}" method="POST" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
            <div class="grid gap-4">
                <div>
                    <label class="block font-semibold mb-1">Reference:</label>
                    <input type="text" name="reference" value="{{ product.reference }}" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block font-semibold mb-1">Description:</label>
                    <input type="text" name="description" value="{{ product.description }}" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block font-semibold mb-1">Type:</label>
                    <input type="text" name="type" value="{{ product.type }}" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block font-semibold mb-1">Price:</label>
                    <input type="number" name="price" step="0.01" value="{{ product.price }}" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <button type="submit" class="w-full bg-green-500 text-white font-semibold py-2 rounded-lg shadow-md hover:bg-green-600">
                    Update Product
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <a href="{{ path('product_list') }}" class="text-gray-600 hover:underline">Back to Product List</a>
        </div>
    </section>
{% endblock %}
