{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-6xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-2xl font-bold mb-6">List of Invoices</h1>
    
    <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-200 shadow-md rounded-lg">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-4 py-2 border">Client</th>
                    <th class="px-4 py-2 border">Total</th>
                    <th class="px-4 py-2 border">Products</th>
                    <th class="px-4 py-2 border">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for facture in factures %}
                    <tr class="border hover:bg-gray-50">
                        <td class="px-4 py-2 border">{{ facture.client.firstName }} {{ facture.client.lastName }}</td>
                        <td class="px-4 py-2 border font-semibold">{{ facture.total }}€</td>
                        <td class="px-4 py-2 border">
                            <ul class="list-disc pl-4">
                                {% for product in facture.products %}
                                    <li>{{ product.type }} - {{ product.price }}€</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td class="px-4 py-2 border">
                            <a href="{{ path('facture_detail', {id: facture.id}) }}" 
                               class="text-blue-500 hover:underline">View</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
