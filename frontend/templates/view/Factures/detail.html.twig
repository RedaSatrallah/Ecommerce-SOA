{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold mb-4">Invoice Details</h1>

        <div class="bg-gray-100 p-4 rounded-md mb-6">
            <p class="text-lg"><strong>Client:</strong> {{ facture.client.firstName }} {{ facture.client.lastName }}</p>
            <p class="text-lg"><strong>Client Address:</strong> {{ facture.client.address }}</p>
            <p class="text-lg font-semibold text-green-600"><strong>Total:</strong> {{ facture.total }}€</p>
        </div>

        <h2 class="text-xl font-semibold mb-3">Products</h2>
        <div class="bg-gray-50 p-4 rounded-md">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {% for product in facture.products %}
                    <div class="bg-white p-4 shadow-md rounded-lg flex flex-col">
                        <h3 class="text-lg font-semibold">{{ product.reference }}</h3>
                        <p class="text-gray-700">{{ product.type }}</p>
                        <p class="text-green-600 font-semibold text-lg mt-auto">{{ product.price }}€</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <a href="{{ path('facture_list') }}" class="mt-6 inline-block px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Back to Invoices
        </a>
    </div>
{% endblock %}
