{% extends 'base.html.twig' %}

{% block title %}Client List{% endblock %}

{% block body %}
    <h1>Clients</h1>
    <table border="1">
        <thead>
            <tr>
               
                <th>Prénom</th>
                <th>Nom</th>
                <th>Adress</th>
                <th>Téléphone</th>
                <th>city</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                  
                    <td>{{ client.firstName }}</td>
                    <td>{{ client.lastName }}</td>
                    <td>{{ client.address }}</td>
                    <td>{{ client.phone }}</td>
                    <td>{{ client.city }}</td>
                    <td>
                        <a href="{{ path('client_edit_form', { id: client.id }) }}">Edit</a> | 
                        <a href="{{ path('client_delete', { id: client.id }) }}" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('client_add_form') }}">Add New Client</a>
{% endblock %}
