{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <h1>Edit Client</h1>
    <form action="{{ path('client_edit', { id: client.id }) }}" method="POST">
        <label>Nom:</label>
        <input type="text" name="lastName" value="{{ client.lastName }}" required>
        <br>
        <label>Prénom:</label>
        <input type="text" name="firstName" value="{{ client.firstName }}" required>
        <br>
        <label>Adresse:</label>
        <input type="text" name="address" value="{{ client.address }}" required>
        <br>
        <label>Téléphone:</label>
        <input type="text" name="phone" value="{{ client.phone }}" required>
        <br>
        <label>Ville:</label>
        <input type="text" name="city" value="{{ client.city }}" required>
        <br>
        <button type="submit">Update Client</button>
    </form>
    <a href="{{ path('client_list') }}">Back to List</a>
{% endblock %}
