{% extends 'base.html.twig' %}

{% block title %}Add Client{% endblock %}

{% block body %}
<section class="container mx-auto py-10 px-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Add Client</h1>
    </div>

    <form action="{{ path('client_add') }}" method="POST" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        <div class="grid gap-4">
            <div>
                <label class="block font-semibold mb-1">First Name:</label>
                <input type="text" name="firstName" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block font-semibold mb-1">Last Name:</label>
                <input type="text" name="lastName" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block font-semibold mb-1">Address:</label>
                <input type="text" name="address" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block font-semibold mb-1">Phone:</label>
                <input type="text" name="phone" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block font-semibold mb-1">City:</label>
                <input type="text" name="city" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white font-semibold py-2 rounded-lg shadow-md hover:bg-blue-600">
                Add Client
            </button>
        </div>
    </form>

    <div class="mt-6 text-center">
        <a href="{{ path('client_list') }}" class="text-gray-600 hover:underline">Back to Client List</a>
    </div>
</section>
{% endblock %}
